{
  "private": true,
  "name": "qwerboom-monorepo",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write .",
    "lint": "eslint packages/**",
    "build": "ts-node scripts/build",
    "watch": "ts-node scripts/watch",
    "clean": "rimraf packages/*/lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acbde45/qwerboom.git"
  },
  "author": "Acbde45",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acbde45/qwerboom/issues"
  },
  "homepage": "https://github.com/acbde45/qwerboom#readme",
  "dependencies": {
    "@types/lodash": "^4.14.180",
    "chokidar": "^3.5.1",
    "execa": "5",
    "fs-extra": "^10.0.1",
    "globby": "^11.0.3",
    "lodash": "^4.17.21",
    "rollup": "^2.70.1",
    "typescript": "^4.2.3",
    "vite": "^2.8.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "eslint-define-config": "^1.3.0",
    "eslint-plugin-node": "^11.1.0",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-node": "^10.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec ts-node scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@6.32.1"
}
